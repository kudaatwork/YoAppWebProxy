@model YoAppWebProxy.ViewModels.AuditTrailViewModel

@{
    ViewBag.Title = "AuditTrail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Proxy Audit Trail</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Proxy Logs<small>(For different Interations)</small></h2>

                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                       
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        @Html.DropDownListFor(model => model.ServiceProviders, ViewBag.ServiceProviders as SelectList, "-- Select Service Provider --", new { @class = "form-control", style = "height:48px" })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DropDownListFor(model => model.ServiceProviders, ViewBag.ServiceProviders as SelectList, "-- Select Sub Folder --", new { @class = "form-control", style = "height:48px" })
                                    </div>
                                </div>
                                <div class="card-box table-responsive">
                                    <table id="datatable-buttons" class="table table-striped table-bordered " style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>DateTime Logged</th>
                                                <th>Log Type</th>
                                                <th>Service Provider</th>
                                                <th>Request/Response Object</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>


                                        <tbody>

                                            @foreach (var item in Model.Logs)
                                            {
                                                <tr>
                                                    <td>@item.DateTimeLogged</td>
                                                    <td>@item.LogType</td>
                                                    <td>@item.ServiceProvider</td>
                                                    <td>@item.RequestResponse</td>
                                                    <td class=" last"><a href="#"><i class="fa fa-eye"></i> View</a></td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

